    <EditText
        android:id="@+id/editTextTextPersonName5"
        android:layout_width="362dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/modo_preparo_publicacao"
        android:textColor="#80000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.265"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.762" />

    <ImageView
        android:id="@+id/Favoritos"
        android:layout_width="48dp"
        android:layout_height="49dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:onClick="IrPublicacao"
        android:src="@drawable/pinclipart_com_broken_glass_clipart_1439670"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.963"
        app:layout_constraintStart_toEndOf="@+id/Publicar"
        app:tint="#80000000" />

    <ImageView
        android:id="@+id/Home"
        android:layout_width="48dp"
        android:layout_height="49dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:onClick="IrFeedPublicacao"
        android:src="@drawable/clipart41237"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="#80000000" />

    <ImageView
        android:id="@+id/Perfils"
        android:layout_width="48dp"
        android:layout_height="49dp"
        android:layout_marginStart="56dp"
        android:clickable="true"
        android:onClick="IrPerfil"
        android:src="@drawable/user"
        app:layout_constraintStart_toEndOf="@+id/Home"
        app:layout_constraintTop_toTopOf="@+id/Home"
        app:tint="#80000000" />

    <ImageView
        android:id="@+id/Publicar"
        android:layout_width="48dp"
        android:layout_height="49dp"
        android:layout_marginStart="56dp"
        android:src="@drawable/aaaaaaddd"
        app:layout_constraintStart_toEndOf="@+id/Perfils"
        app:layout_constraintTop_toTopOf="@+id/Perfils"
        app:tint="#80000000" />

    <ImageView
        android:id="@+id/abrir_camera"
        android:layout_width="48dp"
        android:layout_height="49dp"
        android:src="@drawable/camera_plus_icon_138819"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.366"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#80000000"
        android:clickable="true"
        android:onClick="abrirCamera"
    />


    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="48dp"
        android:layout_height="49dp"
        android:src="@android:drawable/ic_menu_gallery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.63"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#CE000000" />


</androidx.constraintlayout.widget.ConstraintLayout>